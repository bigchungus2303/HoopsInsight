# Streamlit Secrets Template
# Copy this to .streamlit/secrets.toml and fill in your values
# NEVER commit secrets.toml to git!

# NBA API Key (from balldontlie.io)
NBA_API_KEY = "your-api-key-here"

# Email Configuration for Feedback Form
[mail]
HOST = "smtp.office365.com"                    # Outlook/Office 365 SMTP server
PORT = 587                                      # 587 for STARTTLS, 465 for SSL
USERNAME = "sam@aeo-insights.com"               # Your email address
PASSWORD = "your-password-here"                 # Mailbox password or app password
FROM = "HoopsInsight <sam@aeo-insights.com>"    # Display name and sender address
TO = "sam@aeo-insights.com"                     # Recipient email (can be comma-separated)
USE_SSL = false                                 # true for port 465 SSL
USE_TLS = true                                  # true for port 587 STARTTLS
TIMEOUT_SECONDS = 10                            # Connection timeout

